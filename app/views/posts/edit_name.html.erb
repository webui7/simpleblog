<div class="row"><h1>Enter Your Name</h1></div>
<%= form_tag ("/update_name") do -%>
  <div class="row">
    <div class="large-12 columns left"><%= text_field_tag "name", @name %></div>
  </div>
  <div class="actions row">  	
  	<%= link_to 'Back', posts_path, class: "tiny button"%>
    <%= submit_tag "update name", class: "tiny button" %>
  </div>
<%end-%>  
<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="large-4 columns"><%= f.label :title %></div>
    <div class="large-8 columns left"><%= f.text_field :title %></div>
  </div>
  
  <div class="row">
    <div class="large-4 columns"><%= f.label :body %></div>
    <div class="large-8 columns left"><%= f.text_area :body %></div>
  </div>
  
  <div class="row">
    <div class="large-4 columns"><%= f.label 'tegs' %></div>
    <div class="large-8 columns left">
    	<%Tag.all.each do |tag|%>
    	<%= check_box_tag "post[tag_ids][]", tag.id , @post.tags.include?(tag)%>
    	<%= tag.name%>
    	<%end%>
    </div>
  </div>
  
  <div class="actions row">
  	<%= link_to 'Back', posts_path, class: "tiny button"%>
    <%= f.submit "save post", class: "tiny button" %>
  </div>
<% end %>

<%@comments.each do |comment| %>
<div class="panel">
	<div class="row">
		<div class="small-4 large-4 columns comments-padding"><span class="comment-label">Author:</span> <%= comment.user ? comment.user.name : "Anonimus" %></div>
	</div>
	<div class="row">
		<div class="small-4 large-4 columns comments-padding"><span class="comment-label">Comment Title:</span> <%= comment.title %></div>
	</div>

	<div class="row">
		<div class="small-4 large-4 columns comments-padding"><span class="comment-label">Comment Body:</span></div>
	</div>
	<div class="comment-body row"> <%= simple_format(comment.body) %></div>
</div>
</br>
<% end %>

